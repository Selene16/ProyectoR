<% if notice %>
  <div class="alert alert-success" role="alert"><%= notice %> </div>
<% else %>
  <p>  </p>
<% end %>

<h1>Noticias</h1> <a href="/ideas/new" class="btn btn-primary">Subir Noticia</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.order("created_at DESC").each do |idea| %>
      <div class="card" style="width: 18rem;">
      <%= image_tag(idea.picture_url, :width => 200, class:"card-img-top") if idea.picture.present? %>
        <div class="card-body">
          <h5 class="card-title"><%= idea.name %></h5>
          <p class="card-text"><%= idea.created_at.strftime("%d/%m  %H:%M") %></p>
          <p class="card-text"><%= idea.description %></p>
             <%= link_to 'Edit', edit_idea_path(idea), class:"btn btn-primary" %>
             <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger" %>
        </div>
      </div>


      
    <% end %>
  </tbody>
</table>

<br>

